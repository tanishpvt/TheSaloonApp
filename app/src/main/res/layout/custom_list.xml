<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/list_top"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/sa2" />
        <TextView
            android:id="@+id/saloonname"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="17dp"
            android:textSize="18dp"
            android:textColor="#000000"
            android:text="Special Saloon"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp" />
    </LinearLayout>
    <View
        android:id="@+id/line"
        android:layout_below="@id/list_top"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginHorizontal="8dp"
        android:background="#c2c0c0"/>
    <TextView
        android:id="@+id/booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="BOOKED ON"
        android:textSize="12dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/line"/>
    <TextView
        android:id="@+id/bookdisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/booking"
        android:text="5 SEP 2019 at 7.30 PM"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp" />
    <TextView
        android:id="@+id/scheduling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="SCHEDULED ON"
        android:textSize="12dp"
        android:layout_below="@id/bookdisplay"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/scheduledisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scheduling"
        android:layout_marginLeft="10dp"
        android:text="5 SEP 2019 at 7.30 PM"
        android:textSize="15dp"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/Contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CONTACT DETAILS"
        android:textSize="12dp"
        android:layout_below="@id/scheduledisplay"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/ContactNumberCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Contact"
        android:layout_marginLeft="10dp"
        android:text="1234567890"
        android:textSize="15dp"
        android:textColor="#000000" />
    <View
        android:id="@+id/belowline"
        android:layout_below="@id/ContactNumberCustomer"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="7dp"
        android:background="#c2c0c0"/>
    <TextView
        android:id="@+id/repeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="WANT TO BOOK AGAIN?"
        android:textSize="14dp"
        android:layout_below="@id/belowline"
        android:drawableLeft="@drawable/ic_replay_grey_24dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"/>
</RelativeLayout>