<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Sign_up">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/TOPimage">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/sa2"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"/>
    </LinearLayout>
    <TextView
        android:fontFamily="@font/caveat_brush"
        android:id="@id/text"
        android:layout_below="@id/TOPimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="REGISTER AS"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:textAlignment="center"/>
    <Button
        android:id="@+id/btn1"
        android:layout_below="@id/text"
        android:layout_width="400dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:text="I want to book services"
        android:textSize="17dp"
        android:onClick="Customer"
        android:textAlignment="center"
        android:padding="5dp"
        android:textColor="#eee"
        android:layout_centerHorizontal="true"
        android:background="#000"/>
    <Button
        android:id="@+id/btn2"
        android:layout_below="@id/btn1"
        android:layout_width="400dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:text="I want to offer servics"
        android:textSize="17dp"
        android:onClick="owner"
        android:textAlignment="center"
        android:padding="5dp"
        android:textColor="#eee"
        android:layout_centerHorizontal="true"
        android:background="#000"/>
    <View
        android:id="@+id/line"
        android:layout_below="@id/btn2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="210dp"
        android:background="#fc917e"/>

    <TextView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_marginTop="14dp"
        android:hint="Already have an account? SIGN IN"
        android:onClick="backToSignup"
        android:textAlignment="center"
        android:fontFamily="@font/caveat_brush"
        android:textColor="@android:color/holo_red_light"
        android:textSize="24dp"
        android:textStyle="bold" />
</RelativeLayout>