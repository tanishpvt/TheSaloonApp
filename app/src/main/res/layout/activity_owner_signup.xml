<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ownerSignup">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="backToSignup"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"/>

    <TextView
        android:fontFamily="@font/caveat_brush"
        android:id="@+id/ShowRegister"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register as owner"
        android:textStyle="bold"
        android:textSize="23dp"
        android:textAlignment="center"
        android:textColor="#000"/>
    <LinearLayout
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ShowRegister"
        android:orientation="horizontal"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="50dp">
        <EditText android:id="@+id/fname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:hint="First name"
            android:padding="10dp"/>
        <EditText android:id="@+id/lname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Last name"
            android:padding="10dp"
            android:background="@drawable/shape"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <EditText
        android:id="@+id/Mnumber"
        android:layout_below="@id/name"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:padding="10dp"
        android:inputType="phone"
        android:hint="Mobile number"/>
    <EditText
        android:id="@+id/email"
        android:layout_below="@id/Mnumber"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:padding="10dp"
        android:hint="Email"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordinput"
        app:passwordToggleEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email">
    <EditText
        android:id="@+id/password"
        android:layout_below="@id/email"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:inputType="textPassword"
        android:padding="10dp"
        android:hint="Password"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Spinner
        android:id="@+id/gender"
        android:layout_below="@id/passwordinput"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:clickable="true"
        android:paddingVertical="10dp"/>
    <EditText
        android:id="@+id/Website_link"
        android:layout_below="@id/gender"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:padding="10dp"
        android:hint="Website Link"/>
    <Button
        android:id="@+id/next"
        android:layout_below="@id/Website_link"
        android:layout_width="350dp"
        android:layout_marginTop="80dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textSize="16dp"
        android:textAlignment="center"
        android:padding="5dp"
        android:onClick="shopdetails"
        android:layout_centerHorizontal="true"
        android:textColor="#eee"
        android:background="#000"/>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/next"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />
</RelativeLayout>